<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8DEDE"
    tools:context=".ShoeDetailFragment">

    <ImageView
        android:id="@+id/shoe_detail_img"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/shoes_rm_preview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="1dp"
        android:background="#DDBBBB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoe_detail_img"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/shoe_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shoe_detail_img"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="24dp"
        android:text="adidas Women's Stan Smith Low Top Fashion Sneakers Shoes"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/shoe_detail_img"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@+id/shoe_detail_img"
        app:layout_constraintTop_toBottomOf="@+id/shoe_detail_img" />

    <TextView
        android:id="@+id/shoe_detail_desc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shoe_detail_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Sole: Rubber
Closure: Lace-Up
Shoe Width: Medium
Lace Up
Grip Rubber Sole
Padded Insole"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/shoe_detail_name"
        app:layout_constraintTop_toBottomOf="@+id/shoe_detail_name" />

    <TextView
        android:id="@+id/shoe_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shoe_detail_name"
        android:layout_toRightOf="@+id/shoe_detail_desc"
        android:text="100$"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/shoe_detail_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toEndOf="@+id/shoe_detail_desc"
        app:layout_constraintTop_toTopOf="@+id/shoe_detail_desc"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>